/*------------------------------------*\
  $CONTENT_BOX
\*------------------------------------*/
.fs-content-box {
  background: #fff;
  border-radius: $border-radius;
  box-shadow: 0px 0px 4px 0px rgba(0,0,0,0.35), 0px 3px 2px 0px rgba(0,0,0,0.18);
  margin-bottom: 10px;

  &__title {
    @extend h5;

    border-radius: $border-radius $border-radius 0 0;
    padding: 10px 15px;
    border-bottom: 1px solid $color-grey-accent;
    margin: 0;
  }

  &__body {
    padding: 15px;
  }
}