/*------------------------------------*\
  $CONTENTS
\*------------------------------------*/
/**
 * GLOBAL.........Styles placed on html or body
 * HEADINGS.......Heading styles
 * PARAGRAPHS.....Paragraph styles
 * ANCHORS........Anchor styles
 * OTHER..........Other element styles
 */





/*------------------------------------*\
  $GLOBAL
\*------------------------------------*/
html {
  font-size: $font-size-medium;
}

body {
  color: $color-grey-body;
  font-family: $font-face-body;
  font-size: $font-size-medium;
}





/*------------------------------------*\
  $HEADINGS
\*------------------------------------*/
h1, h2, h3, h4,
.fs-h1, .fs-h2, .fs-h3, .fs-h4 {
  color: $color-grey;
  font-family: $font-face-heading;
  letter-spacing: initial;
  text-transform: initial;
  margin-top: 0;
}

h5, .fs-h5 {
  font-family: $font-face-body;
  margin-top: 0;
}

h1, .fs-h1 {
  font-size: pxToRem($font-size-large-xxx);
  line-height: calcLineHeight($line-height-large-xxx, $font-size-large-xxx);

  & + p {
    margin-top: pxToRem(16px);
  }
}

h2, .fs-h2 {
  font-size: pxToRem($font-size-large-xx);
  line-height: calcLineHeight($line-height-large-xx, $font-size-large-xx);
}

h3, .fs-h3 {
  font-size: pxToRem($font-size-large-x);
  line-height: calcLineHeight($line-height-large-x, $font-size-large-x);

  & + p {
    margin-top: pxToRem(14px);
  }
}

h4, .fs-h4 {
  font-size: pxToRem($font-size-large);
  line-height: calcLineHeight($line-height-large, $font-size-large);

  & + p {
    margin-top: pxToRem(12px);
  }
}

h5, .fs-h5 {
  color: $color-grey;
  font-size: pxToRem($font-size-small);
  letter-spacing: 1px;
  line-height: calcLineHeight($line-height-small, $font-size-small);
  text-transform: uppercase;

  & + p {
    margin-top: pxToRem(12px);
  }
}





/*------------------------------------*\
  $PARAGRAPHS
\*------------------------------------*/
p {
  line-height: calcLineHeight($line-height-medium, $font-size-medium);
}

// lobotomized owl variant
// http://alistapart.com/article/axiomatic-css-and-lobotomized-owls
p + p {
  margin-top: pxToRem(26px);
}





/*------------------------------------*\
  $ANCHORS
\*------------------------------------*/
a {
  text-decoration: none;

  &:hover {
    text-decoration: underline;
  }
}

a,
a:hover,
a:active {
  color: #0051c4;
}

a:visited {
  color: #8c0e4c;
}




/*------------------------------------*\
  $OTHER
\*------------------------------------*/
button {
  outline-offset: -2px;
  font-family: $font-face-body;
}

ol, ul, li {
  font-size: pxToRem($font-size-medium);
  line-height: calcLineHeight($line-height-medium, $font-size-medium);
}

small {
  font-size: pxToRem($font-size-small);
  line-height: calcLineHeight($line-height-small, 17px);
  color: $color-grey-body-light;
}