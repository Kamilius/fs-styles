/*------------------------------------*\
  $BODY
\*------------------------------------*/
body {
  color: $color-text;
  font-family: "ProximaNova", sans-serif;
  font-size: $medium-size;
  line-height: $medium-lineHieght;
}

h1, h2, h3, h4 {
  color: $color-headings;
  font-family: "museo", serif;
}
h1 {
  font-size: $xxx-large-size;
  line-height: $xxx-large-lineHeight;
}
h2 {
  font-size: $xx-large-size;
  line-height: $xx-large-lineHeight;
}
h3 {
  font-size: $x-large-size;
  line-height: $x-large-lineHeight;
}
h4 {
  font-size: $large-size;
  line-height: $large-lineHeight;
}
h5 {
  color: $color-headings;
  font-size: $small-size;
  letter-spacing: 1px;
  line-height: $small-lineHieght;
  text-transform: uppercase;
}

a,
a:hover,
a:active {
  color: $color-link;
}

button {
  outline-offset: -2px;
  font-family: "ProximaNova", sans-serif;
}

p + p {
  margin-top: 20px;
}

ul, li {
  line-height: $medium-lineHieght;
}





/*------------------------------------*\
  $FORMS
\*------------------------------------*/
label {
  color: $color-label;
  font-size: $small-size;
  line-height: $small-lineHieght;
}

::-webkit-input-placeholder {
  font-family: "ProximaNova", sans-serif;
}
::-moz-placeholder {
  font-family: "ProximaNova", sans-serif;
}
:-ms-input-placeholder {
  font-family: "ProximaNova", sans-serif;
}

textarea,
input[type=text],
input[type="password"],
input[type="datetime"],
input[type="datetime-local"],
input[type="date"],
input[type="month"],
input[type="time"],
input[type="week"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="search"],
input[type="tel"],
input[type="color"] {
  border-radius: 4px;
  box-shadow: inset 0 3px 0 rgba(0,0,0,0.05);
  box-sizing: content-box;
  color: $color-text;
  font-family: "ProximaNova", sans-serif;
  font-size: $medium-size;
  height: 22px;
  line-height: $medium-lineHieght;
  padding: 4px 6px;
  width: 100%;

  &:focus {
    border: 1px solid $color-border-input-selected;
    box-shadow: inset 0 3px 0 rgba(0,0,0,0.05);
    outline: 0;
  }

  &:disabled,
  &.disabled {
    color: $color-text-input-disabled;
    background: $color-background-input-disabled;
  }
}

textarea {
  resize: vertical;
  min-width: 50%;
  min-height: 75px;
}

select {
  border: 1px solid $color-border-select;
  color: $color-text;
  font-family: "ProximaNova", sans-serif;
  font-size: $medium-size;
  height: 32px;
  line-height: $medium-lineHieght;
  margin: 0;
  padding: 4px 6px;

  &:focus {
    border: 1px solid $color-text;
    outline: none;
  }
}