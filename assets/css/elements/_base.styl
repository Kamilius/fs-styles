/*------------------------------------*\
  $BODY
\*------------------------------------*/
body {
  color: $color-text;
  font-family: "ProximaNova", sans-serif;
  font-size: $medium-size;
  line-height: $medium-lineHieght;
}

h1, h2, h3, h4 {
  color: $color-headings;
  font-family: "museo", serif;
}
h1 {
  font-size: $xxx-large-size;
  line-height: $xxx-large-lineHeight;

  & + p {
    margin-top: 16px;
  }
}
h2 {
  font-size: $xx-large-size;
  line-height: $xx-large-lineHeight;
}
h3 {
  font-size: $x-large-size;
  line-height: $x-large-lineHeight;

  & + p {
    margin-top: 14px;
  }
}
h4 {
  font-size: $large-size;
  line-height: $large-lineHeight;

  & + p {
    margin-top: 12px;
  }
}
h5 {
  color: $color-headings;
  font-size: $small-size;
  letter-spacing: 1px;
  line-height: $small-lineHieght;
  text-transform: uppercase;

  & + p {
    margin-top: 12px;
  }
}

a {
  text-decoration: none;

  &:hover {
    text-decoration: underline;
  }
}

a,
a:hover,
a:active {
  color: $color-link;
}

a:visited {
  color: $color-link-visited;
}

button {
  outline-offset: -2px;
  font-family: "ProximaNova", sans-serif;
}

// lobotomized owl variant
// http://alistapart.com/article/axiomatic-css-and-lobotomized-owls
p + * {
  margin-top: 26px;
}

ul, li {
  line-height: $medium-lineHieght;
}





/*------------------------------------*\
  $FORMS
\*------------------------------------*/
label {
  color: $color-label;
  font-size: $small-size;
  line-height: $small-lineHieght;
  margin-bottom: 0;

  > input[type="radio"],
  > input[type="checkbox"] {
    float: left;
    margin-right: 8px;
  }
}

::-webkit-input-placeholder {
  font-family: "ProximaNova", sans-serif;
}
::-moz-placeholder {
  font-family: "ProximaNova", sans-serif;
}
:-ms-input-placeholder {
  font-family: "ProximaNova", sans-serif;
}

textarea,
input[type=text],
input[type="password"],
input[type="datetime"],
input[type="datetime-local"],
input[type="date"],
input[type="month"],
input[type="time"],
input[type="week"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="search"],
input[type="tel"],
input[type="color"] {
  border-radius: 4px;
  box-shadow: inset 0 3px 0 rgba(0,0,0,0.05);
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
  color: $color-text;
  font-family: "ProximaNova", sans-serif;
  font-size: $medium-size;
  height: 30px;  // needed to override Bootstrap
  line-height: $medium-lineHieght;
  margin-bottom: 0;
  padding: 4px 6px;
  width: 100%;

  &:focus {
    border: 1px solid $color-border-input-selected;
    box-shadow: inset 0 3px 0 rgba(0,0,0,0.05);
    outline: 0;
  }

  &:disabled,
  &.disabled {
    color: $color-text-input-disabled;
    background: $color-background-input-disabled;
  }
}

textarea {
  resize: vertical;
  min-height: 75px;
}

select {
  background-color: #fff;
  border: 1px solid $color-border-select;
  color: $color-text;
  font-family: "ProximaNova", sans-serif;
  font-size: $medium-size;
  height: 32px;
  line-height: $medium-lineHieght;
  margin: 0;
  padding: 4px 6px;
  width: 100%;

  &:focus {
    border: 1px solid $color-text;
    outline: none;
  }
}